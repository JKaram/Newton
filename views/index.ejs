<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link href="/styles/home.css" rel="stylesheet" type="text/css" >

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>

  <link href="/styles/style.css" rel="stylesheet" type="text/css" >

</head>
<%- include('./partials/_header') %>
<body>
  <h1></h1>
  <div class="wrap">
    <div class="search">
      <form class="search-bar" method="POST" action="/search">
        <input type="text" placeholder="Search" name="search">
        <button type="submit"><i class="fa fa-search"></i>Search</button>
      </form>
    </div>
  </div>
<section id="resource-container">
  <% for (let i = 0; i < resource.data.length; i++) { %>
    <a href="/resources/<%=resource.data[i].id%>">
    <div class="resource-box">
         <span class="resource-title"><%= resource.data[i].title %></span>
        <img class="resource-img" src=<%= resource.data[i].img_url %>/>
         <% if (resource.userId) { %>
         <form class="like-button" method="POST" action="/like/<%=resource.data[i].id%>?_method=PUT"><button class="submit">Like</button></form>
         <% } else { %>
        <form method="GET" action="/login"><button class="submit">Like</button></form>
        <% } %>
    </div>
  </a>
  <% } %>
</section>
</body>

</html>
